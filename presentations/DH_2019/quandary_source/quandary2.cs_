
/* This is the CSS stylesheet used in the exercise. */
/* Elements in square brackets are replaced by data based on configuration settings when the exercise is built. */


body{
	font-family: [strFontFace];
[inclPageBGColor]	background-color: [strPageBGColor];[/inclPageBGColor]
	color: [strTextColor];
[inclGraphicURL]	background-image: url([strGraphicURL]);[/inclGraphicURL] 
	font-size: [strFontSize];
}

div.Titles, div.DecisionPoint, div.Feedback{
  max-width: 50rem;
  margin-left: auto;
  margin-right: auto;
}

p{
	text-align: left;
	margin: 0;
}

div.overall{
  border: solid 1pt black;
  margin: 0.5rem auto;
}

div.soFar{
    margin: 0;
    background-color: black;
}

img.topicImage{
  width: 15%;
  float: right;
}

div,span,td{
	color: [strTextColor];
}

div.Titles{
	padding: 0.5rem;
	text-align: center;
	color: [strTitleColor];
}

button{
	display: inline;
	font-size: 100%; /* Required to make IE scale button caption text size! */
}

.ExerciseTitle{
	font-size: 140%;
	color: [strTitleColor];
}

div#Timer{
	padding: 0.3rem;
	margin-left: auto;
	margin-right: auto;
	text-align: center;
}

span#TimerText{
	padding: 0.3rem;
	border-width: 1pt;
	border-style: solid;
	font-weight: bold;
	display: none;
}

div.ControlButtons{
	text-align: center;
}

.Instructions{
	margin-top: 1rem;
}

.DecisionPointTitle{

}

.DecisionPointText{
	text-align: left;
	margin: auto;
}

td#AssetDisplay{
	display: none;
}

div.Assets{
	margin: 2rem;
}

table.AssetTable{
	border-width: 0.3rem;
	border-style: double;
	border-color: [strTextColor];
	padding: 0.3rem;
}

table.AssetTable th{
	background-color: [strTextColor];
	color: [strExBGColor];
	padding: 0.3rem;
}

div.LinkList{
	margin-top: 2rem;
}

table.LinkTable{
	margin-left: 0;
	margin-right: 0;
	text-align: left;
}

.FeedbackText{
	color: [strTitleColor];
}

table.DPTable{
	margin-left: 5%;
	margin-right: 5%;
	width: 90%;
	border-width: 0;
	padding: 1rem;
	vertical-align: top;
}

div.Feedback {
[inclPageBGColor]	background-color: [strPageBGColor];[/inclPageBGColor]
	left: 33%;
	width: 34%;
	top: 33%;
	z-index: 1;
	border-style: solid;
	border-width: 1pt;
	padding: 0.5rem;
	text-align: center;
	color: [strTitleColor];
	position: absolute;
	display: none;
}

div.DecisionPoint{
[inclExBGColor]	background-color: [strExBGColor];[/inclExBGColor]
	text-align: center;
	color: [strTextColor];
	padding: 0.5rem;
	border-style: solid;
	border-width: 1pt 1pt 1pt 1pt;
	border-color: [strTextColor];
	margin: 1rem auto;
}

.FuncButton {
  background-color: #aaaaff;
	text-align: center;
	border-style: solid;
[inclExBGColor]
	border-left-color: [strFuncLightColor];
	border-top-color: [strFuncLightColor];
	border-right-color: [strFuncShadeColor];
	border-bottom-color: [strFuncShadeColor];
	color: [strTextColor];
	background-color: [strExBGColor];
[/inclExBGColor]
	border-width: 0.15rem;
	padding: 0.2rem 0.4rem;
	cursor: pointer;
}

.FuncButtonUp {
	color: [strExBGColor];
	text-align: center;
	border-style: solid;
[inclExBGColor]
	border-left-color: [strFuncLightColor];
	border-top-color: [strFuncLightColor];
	border-right-color: [strFuncShadeColor];
	border-bottom-color: [strFuncShadeColor];
[/inclExBGColor]
	background-color: [strTextColor];
	color: [strExBGColor];
	border-width: 0.15rem;
	padding: 0.2rem 0.4rem;
	cursor: pointer;
}

.FuncButtonDown {
	color: [strExBGColor];
	text-align: center;
	border-style: solid;
[inclExBGColor]
	border-left-color: [strFuncShadeColor];
	border-top-color: [strFuncShadeColor];
	border-right-color: [strFuncLightColor];
	border-bottom-color: [strFuncLightColor];
	background-color: [strTextColor];
	color: [strExBGColor];
[/inclExBGColor]
	border-width: 0.15rem;
	padding: 0.2rem 0.4rem;
	cursor: pointer;
}

/*BeginNavBarStyle*/

div.NavButtonBar{
[inclNavBarColor]	background-color: [strNavBarColor];[/inclNavBarColor]
	text-align: center;
	margin: 1rem auto;
	clear: both;
}

.NavButton {
	border-style: solid;
[inclNavBarColor]	
	border-left-color: [strNavLightColor];
	border-top-color: [strNavLightColor];
	border-right-color: [strNavShadeColor];
	border-bottom-color: [strNavShadeColor];
	background-color: [strNavBarColor];
	color: [strNavTextColor];
[/inclNavBarColor]
	border-width: 0.15rem;
	cursor: pointer;	
}

.NavButtonUp {
	border-style: solid;
[inclNavBarColor]
	border-left-color: [strNavLightColor];
	border-top-color: [strNavLightColor];
	border-right-color: [strNavShadeColor];
	border-bottom-color: [strNavShadeColor];
	color: [strNavBarColor];
	background-color: [strNavTextColor];
[/inclNavBarColor]
	border-width: 0.15rem;;
	cursor: pointer;	
}

.NavButtonDown {
	border-style: solid;
[inclNavBarColor]
	border-left-color: [strNavShadeColor];
	border-top-color: [strNavShadeColor];
	border-right-color: [strNavLightColor];
	border-bottom-color: [strNavLightColor];
	color: [strNavBarColor];
	background-color: [strNavTextColor];
[/inclNavBarColor]
	border-width: 0.15rem;
	cursor: pointer;	
}

a{
	color: [strLinkColor];
}

a:visited{
	color: [strVLinkColor];
}

a:hover{
	color: [strLinkColor];
}
